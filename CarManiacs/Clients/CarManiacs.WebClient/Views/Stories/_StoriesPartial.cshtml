@model IEnumerable<CarManiacs.WebClient.Models.StoryShortViewModel>

@foreach (var story in Model)
{
    <div class="project-short inline-block">
        <header>
            <h3>@Html.ActionLink(story.Title, "Details", "Stories", new { id = story.Id }, new { })</h3>
        </header>
        <div>
            <img class="project-image" src="@story.ImageUrl" alt="" />
        </div>
        <p></p>
    </div>
}