    ViewBag.Title = "Home";
}

<!-- Banner -->
    <section id="banner">
        <div class="inner">
            <h1>
                CarManiacs: <span> A place for people who share<br />
                the passion for</span> cars
            </h1>
            <ul class="actions">
                <li><a href="./#about" class="button alt">About</a></li>
